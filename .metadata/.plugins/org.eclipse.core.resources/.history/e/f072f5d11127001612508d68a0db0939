#include <avr/io.h>
#include <util/delay.h>

int main (void)
{
	PORTD |= (1 << PD2);
	DDRB = 0b00000111;

	while (1){
		if (bit_is_clear(PIND, PD2)) {
			PORTB = 0b00000111;
		}
		else {
			PORTB = 0b00000010;
			_delay_ms(1000);
			PORTB = 0b00000001;
			_delay_ms(1000);
			PORTB = 0b00000100;
			_delay_ms(1000);
			PORTB = 0b00000000;
			_delay_ms(1000);
		}

	}
	return(0);
}


