#include <avr/io.h>
#include <util/delay.h>

int main (void)
{
	PORTD |= (1 << PD2);
	DDRB |= (1 << PB0);


	while (1){
		if (bit_is_clear(PIND, PD2)) {
			PORTB = 0b00000001;
		}
		else {
			PORTB = 0b00000010;
		}


	}
	return(0);
}
